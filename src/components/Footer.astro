<style>
  .footer {
    background: var(--color-gray-900);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-brand {
    max-width: 280px;
  }

  .footer-logo {
    width: 180px;
    filter: invert(1);
    margin-bottom: 1rem;
  }

  .footer-tagline {
    color: var(--color-gray-400);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-column h4 {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-light);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
  }

  .footer-column nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-column a {
    color: var(--color-gray-400);
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: var(--color-accent);
  }

  .footer-column address {
    font-style: normal;
    color: var(--color-gray-400);
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
  }

  .footer-bottom p {
    color: var(--color-gray-500);
    font-size: 0.875rem;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    color: var(--color-gray-400);
    transition: all 0.3s ease;
  }

  .footer-social a:hover {
    background: var(--color-accent);
    color: var(--color-dark);
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-brand {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }
  }
</style>
