<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 10, 10, 0.95) 0%,
      rgba(10, 10, 10, 0.8) 50%,
      rgba(10, 10, 10, 0.7) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 2rem;
    max-width: 900px;
  }

  .hero-badge {
    display: inline-block;
    margin-bottom: 1.25rem;
    opacity: 0;
  }

  .badge-text {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(0, 201, 167, 0.15);
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
  }

  .hero-logo {
    max-width: 180px;
    margin: 0 auto 1.5rem;
    opacity: 0;
  }

  .hero-logo img {
    width: 100%;
    filter: invert(1);
  }

  .hero-title {
    font-size: clamp(1.75rem, 4.5vw, 2.75rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--color-light);
    opacity: 0;
  }

  .hero-title .highlight {
    color: var(--color-accent);
    position: relative;
  }

  .hero-subtitle {
    font-size: clamp(0.95rem, 1.8vw, 1.1rem);
    color: var(--color-gray-300);
    margin-bottom: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
  }

  .hero-details {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    opacity: 0;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-size: 0.875rem;
    backdrop-filter: blur(10px);
  }

  .detail-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .sponsors-section {
    margin-bottom: 1.5rem;
    opacity: 0;
  }

  .sponsors-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gray-400);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .sponsors-logos {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    max-width: 700px;
    margin: 0 auto;
  }

  .sponsor-logo {
    height: 26px;
    width: auto;
    opacity: 0.8;
    filter: brightness(0) invert(1);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .sponsor-logo:hover {
    opacity: 1;
    transform: scale(1.05);
  }

  .hero-stats {
    margin-bottom: 1rem;
    opacity: 0;
  }

  .stat-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    font-size: 0.875rem;
    color: var(--color-gray-300);
  }

  .stat-item svg {
    color: var(--color-accent);
  }

  .stat-item strong {
    color: var(--color-light);
  }

  .hero-discount {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    opacity: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .discount-badge {
    background: var(--color-accent);
    color: var(--color-dark);
    font-size: 0.75rem;
    font-weight: 800;
    padding: 0.4rem 0.75rem;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .discount-text {
    font-size: 0.95rem;
    color: var(--color-gray-300);
    margin: 0;
  }

  .discount-code {
    background: rgba(0, 201, 167, 0.2);
    color: var(--color-accent);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-weight: 700;
    font-family: monospace;
    letter-spacing: 0.1em;
  }

  .hero-cta {
    opacity: 0;
    font-size: 1rem;
    padding: 1rem 2rem;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-gray-400);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    animation: fadeIn 1s ease 1.5s forwards;
    opacity: 0;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-accent), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% {
      transform: scaleY(1);
      opacity: 1;
    }
    50% {
      transform: scaleY(0.5);
      opacity: 0.5;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1.5rem 1rem;
    }

    .hero-logo {
      max-width: 140px;
      margin-bottom: 1rem;
    }

    .hero-badge {
      margin-bottom: 1rem;
    }

    .hero-title {
      margin-bottom: 0.75rem;
    }

    .hero-subtitle {
      margin-bottom: 1.25rem;
      font-size: 0.9rem;
    }

    .hero-details {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.25rem;
    }

    .detail-item {
      width: 100%;
      max-width: 280px;
      justify-content: center;
      padding: 0.5rem 0.875rem;
      font-size: 0.8rem;
    }

    .sponsors-logos {
      gap: 1.25rem;
      max-width: 100%;
    }

    .sponsor-logo {
      height: 22px;
    }

    .sponsors-section {
      margin-bottom: 1rem;
    }

    .hero-stats {
      margin-bottom: 0.75rem;
    }

    .stat-item {
      font-size: 0.8rem;
      padding: 0.4rem 0.875rem;
    }

    .hero-discount {
      margin-bottom: 1.25rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .discount-text {
      font-size: 0.875rem;
    }

    .hero-cta {
      font-size: 0.9rem;
      padding: 0.875rem 1.75rem;
    }
  }
</style>
