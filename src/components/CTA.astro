<style>
  .cta {
    position: relative;
    background: var(--color-dark);
    overflow: hidden;
  }

  .cta-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .cta-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 201, 167, 0.15) 0%,
      transparent 60%
    );
  }

  .cta-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-label {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(0, 201, 167, 0.15);
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
    margin-bottom: 2rem;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--color-light);
    margin-bottom: 1.5rem;
  }

  .cta-text {
    font-size: 1.25rem;
    color: var(--color-gray-300);
    margin-bottom: 3rem;
    line-height: 1.7;
  }

  .pricing-section {
    margin-bottom: 3rem;
  }

  .pricing-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-light);
    margin-bottom: 2rem;
    text-align: center;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 2.5rem 1.5rem 2rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 201, 167, 0.3);
    background: rgba(255, 255, 255, 0.05);
  }

  .pricing-card.early-bird {
    border: 2px solid var(--color-accent);
    background: rgba(0, 201, 167, 0.08);
    transform: scale(1.05);
    box-shadow: 0 10px 40px rgba(0, 201, 167, 0.2);
  }

  .pricing-card.early-bird:hover {
    transform: scale(1.05) translateY(-4px);
  }

  .pricing-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: var(--color-dark);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.4rem 1rem;
    border-radius: 50px;
    white-space: nowrap;
  }

  .pricing-amount {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .currency {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-top: 0.5rem;
  }

  .price {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--color-light);
    line-height: 1;
  }

  .pricing-description {
    font-size: 0.95rem;
    color: var(--color-gray-400);
    margin-bottom: 0;
  }

  .pricing-features-card {
    max-width: 600px;
    margin: 2.5rem auto 0;
    padding: 2rem 2.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    text-align: center;
  }

  .features-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-light);
    margin-bottom: 1.5rem;
  }

  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .pricing-features li {
    font-size: 0.95rem;
    color: var(--color-gray-300);
    padding-left: 1.75rem;
    position: relative;
    text-align: left;
  }

  .pricing-features li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
    font-size: 1.1rem;
  }

  .cta-details {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .cta-detail {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
  }

  .cta-detail svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .cta-detail div {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }

  .cta-detail strong {
    font-size: 0.75rem;
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-detail span {
    font-size: 0.95rem;
    color: var(--color-light);
    font-weight: 500;
  }

  .cta-button {
    font-size: 1.1rem;
    padding: 1.25rem 2.5rem;
    margin-bottom: 1.5rem;
  }

  .cta-note {
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }

  @media (max-width: 1024px) {
    .pricing-cards {
      gap: 1.25rem;
    }

    .pricing-card.early-bird {
      transform: scale(1.02);
    }

    .pricing-card.early-bird:hover {
      transform: scale(1.02) translateY(-4px);
    }
  }

  @media (max-width: 768px) {
    .pricing-cards {
      grid-template-columns: 1fr;
      max-width: 400px;
    }

    .pricing-card {
      padding: 2rem 1.25rem;
    }

    .pricing-card.early-bird {
      transform: scale(1);
    }

    .pricing-card.early-bird:hover {
      transform: translateY(-4px);
    }

    .price {
      font-size: 3rem;
    }

    .pricing-features {
      grid-template-columns: 1fr;
      gap: 0.875rem;
    }

    .pricing-features-card {
      padding: 1.75rem 1.5rem;
    }
  }

  @media (max-width: 640px) {
    .cta-text {
      font-size: 1.1rem;
    }

    .pricing-title {
      font-size: 1.25rem;
    }

    .pricing-badge {
      font-size: 0.7rem;
      padding: 0.35rem 0.85rem;
    }

    .price {
      font-size: 2.5rem;
    }

    .currency {
      font-size: 1.25rem;
    }

    .pricing-features-card {
      padding: 1.5rem 1.25rem;
      margin-top: 2rem;
    }

    .features-title {
      font-size: 1rem;
      margin-bottom: 1.25rem;
    }

    .pricing-features li {
      font-size: 0.875rem;
    }

    .cta-details {
      flex-direction: column;
      align-items: center;
    }

    .cta-detail {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
